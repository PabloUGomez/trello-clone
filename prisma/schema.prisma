generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Board {
  id            String @id @default(uuid())
  title         String
  orgId         String
  imageId       String
  imageThumbId  String
  imageFullId   String
  imageLinkHTML String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
